<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
        <css src="Tigren_Ajaxsuite::css/media.css"/>
		<css src="Tigren_Ajaxsuite::css/ajaxsuite.css"/>
	</head>
    <body>
    	<referenceBlock name="head.components">
            <block class="Tigren\Ajaxsuite\Block\Js" name="ajaxSuiteJs" as="ajaxSuiteJs" ifconfig="ajaxsuite/general/enabled"/>
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block class="Tigren\Ajaxsuite\Block\Popup\Wrapper" name="ajaxsuite.popup.wrapper"
                   template="popup/wrapper.phtml" ifconfig="ajaxsuite/general/enabled" >
                <block class="Tigren\Ajaxsuite\Block\Popup\Popup" name="ajaxsuite.popup.popup"
                    template="popup/popup.phtml" />
            </block>
        </referenceContainer>
    </body>
</page>
